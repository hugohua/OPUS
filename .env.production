# Opus Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# ------------------------------------------------------------------------------
# 数据库配置 (POSTGRES)
# ------------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=opus
DATABASE_URL=postgresql://postgres:secure_password_here@opus-db:5432/opus

# ------------------------------------------------------------------------------
# 缓存配置 (REDIS)
# ------------------------------------------------------------------------------
REDIS_URL=redis://opus-redis:6379

# ------------------------------------------------------------------------------
# 认证配置 (NEXT-AUTH)
# ------------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET=your_auth_secret_here

# ------------------------------------------------------------------------------
# AI 模型服务配置
# ------------------------------------------------------------------------------
# OpenAI / DeepSeek
OPENAI_API_KEY=your_openai_key_here
OPENAI_BASE_URL=https://api.deepseek.com/v1
AI_MODEL_NAME=deepseek-chat

# ETL Service (if applicable)
ETL_API_KEY=your_etl_key_here
ETL_BASE_URL=http://your-etl-service

# AI Provider Order
AI_PROVIDER_ORDER=openai

# ------------------------------------------------------------------------------
# TTS 服务配置
# ------------------------------------------------------------------------------
TTS_API_KEY=your_tts_service_key_here
TTS_BASE_URL=http://opus-tts:8000
PYTHON_TTS_URL=http://opus-tts:8000

# ------------------------------------------------------------------------------
# Next.js 配置
# ------------------------------------------------------------------------------
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
